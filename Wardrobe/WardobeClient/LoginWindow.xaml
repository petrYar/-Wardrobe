<Window x:Class="ProductShopClient.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankomatClient"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="420">
    <Grid Background="LightBlue">
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="23" Margin="44,72,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="316"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="23" Margin="44,181,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="316"/>
        <Label Content="Login" HorizontalAlignment="Left" Margin="44,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="44,150,0,0" VerticalAlignment="Top"/>
        <Button Click="Button_Click" Content="Sign in" Background="White" Cursor="Hand" FontSize="16" HorizontalAlignment="Left" Margin="124,263,0,0" VerticalAlignment="Top" Width="156" Height="39"/>
        <Button Click="Button_Click_1" Content="Sign up" BorderThickness="0" Cursor="Hand" Background="Transparent" FontSize="16" HorizontalAlignment="Left" Margin="124,344,0,0" VerticalAlignment="Top" Width="156" Height="36"/>
    </Grid>
</Window>
